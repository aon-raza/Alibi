<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back_color">

    <ImageView
        android:id="@+id/logIV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/_30sdp"
        android:src="@drawable/logo"
        app:layout_constraintBottom_toTopOf="@id/signUpBT"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.9" />
    <TextView
        android:id="@+id/titleTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_10sdp"
        android:autoSizeMaxTextSize="@dimen/_14ssp"
        android:autoSizeMinTextSize="@dimen/_12ssp"
        android:autoSizeTextType="uniform"
        android:text="Aware. Organized. Accountable."
        android:textColor="@color/black"
        android:textSize="@dimen/_14ssp"
        android:fontFamily="@font/gotham_rounded_medium"
        app:layout_constraintBottom_toBottomOf="@id/logIV"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/signUpBT"
        android:layout_width="0dp"
        android:layout_height="@dimen/_45sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:text="Sign Up"
        android:textColor="@color/white"
        android:textSize="@dimen/_14ssp"
        android:textAllCaps="false"
        android:fontFamily="@font/gotham_rounded_medium"
        android:background="@drawable/rounded_background_green"
        app:layout_constraintBottom_toTopOf="@id/signInBT"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.8" />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/signInBT"
        android:layout_width="0dp"
        android:layout_height="@dimen/_45sdp"
        android:layout_marginBottom="@dimen/_30sdp"
        android:text="Sign in"
        android:textColor="@color/green"
        android:textSize="@dimen/_14ssp"
        android:textAllCaps="false"
        android:fontFamily="@font/gotham_rounded_medium"
        android:background="@drawable/rounded_background_white"
        app:layout_constraintBottom_toTopOf="@id/textTV"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.8" />
    <TextView
        android:id="@+id/textTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autoSizeMaxTextSize="@dimen/_13ssp"
        android:autoSizeMinTextSize="@dimen/_10ssp"
        android:autoSizeTextType="uniform"
        android:text="By signing in or signing up,you agree to Alibi's"
        android:textColor="@color/black"
        android:layout_marginHorizontal="@dimen/_16sdp"
        android:textSize="@dimen/_10ssp"
        android:fontFamily="@font/gotham_rounded_medium"
        app:layout_constraintBottom_toTopOf="@+id/privacyTV"
        app:layout_constraintEnd_toEndOf="@id/signInBT"
        app:layout_constraintStart_toStartOf="@id/signInBT" />

    <TextView
        android:id="@+id/privacyTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_40sdp"
        android:autoSizeMaxTextSize="@dimen/_14ssp"
        android:autoSizeMinTextSize="@dimen/_10ssp"
        android:autoSizeTextType="uniform"
        android:text="Term of Service and Privacy Policy"
        android:textColor="@color/green"
        android:layout_marginHorizontal="@dimen/_16sdp"
        android:textSize="@dimen/_11ssp"
        android:fontFamily="@font/gotham_rounded_medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/signInBT"
        app:layout_constraintStart_toStartOf="@id/signInBT"
        android:textStyle="bold"/>
</androidx.constraintlayout.widget.ConstraintLayout>