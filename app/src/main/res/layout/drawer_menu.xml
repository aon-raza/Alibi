<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/back_color"
    android:paddingLeft="@dimen/_10sdp"
    android:paddingRight="@dimen/_10sdp">
    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/userIV"
        android:layout_width="@dimen/_80sdp"
        android:layout_height="@dimen/_80sdp"
        android:layout_marginTop="@dimen/_10sdp"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:scaleType="fitCenter"
        android:padding="@dimen/_2sdp"
        app:riv_corner_radius="@dimen/_15sdp"
        app:riv_border_width="@dimen/_3sdp"
        app:riv_border_color="@color/white"
        app:riv_mutate_background="true"
        app:riv_tile_mode="clamp"
        app:riv_oval="false"
        android:src="@drawable/pilot_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view"/>

    <TextView
        android:id="@+id/userNameTV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/gotham_rounded_medium"
        android:text="SSGT Miller,D"
        android:textColor="@color/black"
        android:textSize="@dimen/_16ssp"
        app:layout_constraintBottom_toTopOf="@id/userSirNameTV"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/userIV"
        app:layout_constraintTop_toTopOf="@id/userIV" />

    <TextView
        android:id="@+id/userSirNameTV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/gotham_rounded_medium"
        android:text="Sr Analyst"
        android:textColor="@color/text_gray"
        android:textSize="@dimen/_14ssp"
        app:layout_constraintBottom_toBottomOf="@id/userIV"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/userIV"
        app:layout_constraintTop_toBottomOf="@id/userNameTV" />
    <ImageView
        android:id="@+id/utterIV"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        android:src="@drawable/utter_icon"
        android:layout_marginTop="@dimen/_50sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/userSirNameTV"/>
    <TextView
        android:id="@+id/utterTV"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_25sdp"
        android:textSize="@dimen/_12ssp"
        android:textColor="@color/black"
        android:text="Utter"
        android:gravity="center_vertical"
        android:fontFamily="@font/montserrat_medium"
        android:layout_marginLeft="@dimen/_10sdp"
        app:layout_constraintStart_toEndOf="@id/utterIV"
        app:layout_constraintTop_toTopOf="@id/utterIV" />
    <ImageView
        android:id="@+id/profileIV"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        android:src="@drawable/profile_icon"
        android:layout_marginTop="@dimen/_20sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/utterIV"/>
    <TextView
        android:id="@+id/profileTV"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_25sdp"
        android:textSize="@dimen/_12ssp"
        android:textColor="@color/black"
        android:text="Profile"
        android:gravity="center_vertical"
        android:fontFamily="@font/montserrat_medium"
        android:layout_marginLeft="@dimen/_10sdp"
        app:layout_constraintStart_toEndOf="@id/profileIV"
        app:layout_constraintTop_toTopOf="@id/profileIV" />
    <ImageView
        android:id="@+id/myKhrimiIV"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        android:src="@drawable/khirmi_icon"
        android:layout_marginTop="@dimen/_20sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profileIV"/>
    <TextView
        android:id="@+id/myKhrimiTV"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_25sdp"
        android:textSize="@dimen/_12ssp"
        android:textColor="@color/black"
        android:text="My Khrimi"
        android:gravity="center_vertical"
        android:fontFamily="@font/montserrat_medium"
        android:layout_marginLeft="@dimen/_10sdp"
        app:layout_constraintStart_toEndOf="@id/myKhrimiIV"
        app:layout_constraintTop_toTopOf="@id/myKhrimiIV" />
    <ImageView
        android:id="@+id/messageIV"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        android:src="@drawable/message_icon"
        android:layout_marginTop="@dimen/_20sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/myKhrimiIV"/>
    <TextView
        android:id="@+id/messageTV"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_25sdp"
        android:textSize="@dimen/_12ssp"
        android:textColor="@color/black"
        android:text="Messages"
        android:gravity="center_vertical"
        android:fontFamily="@font/montserrat_medium"
        android:layout_marginLeft="@dimen/_10sdp"
        app:layout_constraintStart_toEndOf="@id/messageIV"
        app:layout_constraintTop_toTopOf="@id/messageIV" />
    <ImageView
        android:id="@+id/mediaIV"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        android:src="@drawable/media_icon"
        android:layout_marginTop="@dimen/_20sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/messageIV"/>
    <TextView
        android:id="@+id/mediaTV"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_25sdp"
        android:textSize="@dimen/_12ssp"
        android:textColor="@color/black"
        android:text="Media"
        android:gravity="center_vertical"
        android:fontFamily="@font/montserrat_medium"
        android:layout_marginLeft="@dimen/_10sdp"
        app:layout_constraintStart_toEndOf="@id/mediaIV"
        app:layout_constraintTop_toTopOf="@id/mediaIV" />
    <ImageView
        android:id="@+id/learnIV"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        android:src="@drawable/learn_icon"
        android:layout_marginTop="@dimen/_20sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mediaIV"/>
    <TextView
        android:id="@+id/learnTV"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_25sdp"
        android:textSize="@dimen/_12ssp"
        android:textColor="@color/black"
        android:text="Learn"
        android:gravity="center_vertical"
        android:fontFamily="@font/montserrat_medium"
        android:layout_marginLeft="@dimen/_10sdp"
        app:layout_constraintStart_toEndOf="@id/learnIV"
        app:layout_constraintTop_toTopOf="@id/learnIV" />

</androidx.constraintlayout.widget.ConstraintLayout>