<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="@dimen/_16sdp"
    android:id="@+id/mainLayout">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/rosterIV"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:src="@drawable/roster"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/rosterNameTV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_8sdp"
        android:fontFamily="@font/gotham_rounded_medium"
        android:text="Alpha Co."
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="@dimen/_14ssp"
        app:layout_constraintStart_toEndOf="@+id/rosterIV"
        app:layout_constraintTop_toTopOf="@+id/rosterIV" />

    <TextView
        android:id="@+id/membersTV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_8sdp"
        android:fontFamily="@font/gotham_rounded_medium"
        android:text="141 Members"
        android:textAlignment="textStart"
        android:textColor="@color/text_gray"
        android:textSize="@dimen/_12ssp"
        app:layout_constraintStart_toEndOf="@+id/rosterIV"
        app:layout_constraintTop_toBottomOf="@id/rosterNameTV" />



    <TextView
        android:id="@+id/rosterTypeTV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_background_light_green"
        android:fontFamily="@font/gotham_rounded_medium"
        android:paddingHorizontal="@dimen/_12sdp"
        android:paddingVertical="@dimen/_4sdp"
        android:text="Public"
        android:textAlignment="textStart"
        android:textColor="@color/green"
        android:textSize="@dimen/_12ssp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/rosterIV" />

    <View
        android:id="@+id/lineView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:layout_marginTop="@dimen/_16sdp"
        android:background="@color/text_gray"
        app:layout_constraintTop_toBottomOf="@id/rosterIV" />

</androidx.constraintlayout.widget.ConstraintLayout>