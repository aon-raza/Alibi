<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back_color">
    <ImageView
        android:id="@+id/closeIV"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="@dimen/_15sdp"
        android:src="@drawable/close_icon"
        android:padding="@dimen/_3sdp"/>
    <TextView
        android:id="@+id/titleTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_20sdp"
        android:autoSizeMaxTextSize="@dimen/_16ssp"
        android:autoSizeMinTextSize="@dimen/_14ssp"
        android:autoSizeTextType="uniform"
        android:text="Sign up"
        android:textColor="@color/black"
        android:textSize="@dimen/_16ssp"
        android:fontFamily="@font/gotham_rounded_medium"
        app:layout_constraintBottom_toTopOf="@id/googleSignUpTV"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/googleSignUpTV"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.8"
        android:layout_height="@dimen/_45sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        android:autoSizeMaxTextSize="@dimen/_14ssp"
        android:autoSizeMinTextSize="@dimen/_12ssp"
        android:autoSizeTextType="uniform"
        android:text="Sign up with Google"
        android:gravity="center"
        android:drawableLeft="@drawable/google_icon"
        android:textColor="@color/blue"
        android:textSize="@dimen/_13ssp"
        android:fontFamily="@font/gotham_rounded_medium"
        app:layout_constraintBottom_toTopOf="@id/orTV"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textStyle="bold"
        android:padding="@dimen/_10sdp"
        android:background="@drawable/rounded_background_white"/>
    <TextView
        android:id="@+id/orTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_20sdp"
        android:autoSizeMaxTextSize="@dimen/_14ssp"
        android:autoSizeMinTextSize="@dimen/_12ssp"
        android:autoSizeTextType="uniform"
        android:text="Or Sign up with"
        android:textColor="@color/text_gray"
        android:textSize="@dimen/_13ssp"
        android:fontFamily="@font/gotham_rounded_medium"
        app:layout_constraintBottom_toTopOf="@id/nameET"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textStyle="bold" />
    <EditText
        android:id="@+id/nameET"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.8"
        android:layout_height="@dimen/_45sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:autoSizeMaxTextSize="@dimen/_12ssp"
        android:autoSizeMinTextSize="@dimen/_10ssp"
        android:autoSizeTextType="uniform"
        android:background="@drawable/rounded_background_white"
        android:fontFamily="@font/gotham_rounded_medium"
        android:hint="Name"
        android:imeOptions="actionNext"
        android:maxLines="1"
        android:paddingLeft="@dimen/_10sdp"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textSize="@dimen/_12ssp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/emailET"/>
    <EditText
        android:id="@+id/emailET"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.8"
        android:layout_height="@dimen/_45sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:autoSizeMaxTextSize="@dimen/_12ssp"
        android:autoSizeMinTextSize="@dimen/_10ssp"
        android:autoSizeTextType="uniform"
        android:background="@drawable/rounded_background_white"
        android:fontFamily="@font/gotham_rounded_medium"
        android:hint="Email"
        android:imeOptions="actionNext"
        android:maxLines="1"
        android:paddingLeft="@dimen/_10sdp"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textSize="@dimen/_12ssp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/passwordET"/>
    <EditText
        android:id="@+id/passwordET"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.8"
        android:layout_height="@dimen/_45sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        android:autoSizeMaxTextSize="@dimen/_12ssp"
        android:autoSizeMinTextSize="@dimen/_10ssp"
        android:autoSizeTextType="uniform"
        android:background="@drawable/rounded_background_white"
        android:fontFamily="@font/gotham_rounded_medium"
        android:hint="Password"
        android:inputType="textPassword"
        android:imeOptions="actionDone"
        android:maxLines="1"
        android:paddingLeft="@dimen/_10sdp"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textSize="@dimen/_12ssp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/forgotPasswordTV"/>

    <TextView
        android:id="@+id/forgotPasswordTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_20sdp"
        android:autoSizeMaxTextSize="@dimen/_14ssp"
        android:autoSizeMinTextSize="@dimen/_12ssp"
        android:autoSizeTextType="uniform"
        android:text="Forgot Password?"
        android:textColor="@color/text_gray"
        android:textSize="@dimen/_13ssp"
        android:fontFamily="@font/gotham_rounded_medium"
        app:layout_constraintBottom_toTopOf="@id/signUpBT"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textStyle="bold"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/signUpBT"
        android:layout_width="0dp"
        android:layout_height="@dimen/_45sdp"
        android:layout_marginBottom="@dimen/_50sdp"
        android:text="Sign Up"
        android:textColor="@color/white"
        android:textSize="@dimen/_14ssp"
        android:textAllCaps="false"
        android:fontFamily="@font/gotham_rounded_medium"
        android:background="@drawable/rounded_background_green"
        app:layout_constraintBottom_toTopOf="@id/signInTV"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.8" />
    <TextView
        android:id="@+id/signInTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_40sdp"
        android:autoSizeMaxTextSize="@dimen/_14ssp"
        android:autoSizeMinTextSize="@dimen/_12ssp"
        android:autoSizeTextType="uniform"
        android:text="Already have an account? Sign in"
        android:textColor="@color/green"
        android:textSize="@dimen/_12ssp"
        android:fontFamily="@font/gotham_rounded_medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textStyle="bold"/>
</androidx.constraintlayout.widget.ConstraintLayout>